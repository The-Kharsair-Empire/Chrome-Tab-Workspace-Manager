{
    "manifest_version": 3,
    "name": "Imperial Bibliothecarius",
    "version": "0.0.1",
    "description": "A utility tool For the Emperor his highness himself and his subordinates to manage tabs and workspaces",
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "action": {
        "default_popup": "popup/dist/popup/browser/index.html",
        "default_title": "Imperial Bibliothecarius"
    },
    "background": {
        "service_worker": "background/dist/service-worker.js"
    },
    "permissions": [
        "tabGroups",
        "storage",
        "scripting",
        "activeTab",
        "tabs"
    ],
    "incognito": "not_allowed"
}